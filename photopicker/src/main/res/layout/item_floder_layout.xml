<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#FFFFFF"
android:gravity="center_vertical"
android:orientation="horizontal">

<ImageView
    android:id="@+id/imageview_floder_img"
    android:layout_width="68dp"
    android:layout_height="68dp"
    android:layout_margin="8dp"
    android:scaleType="centerCrop"
    android:src="@drawable/ic_photo_loading"/>

<LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textview_floder_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/all_photos"
        android:textColor="@android:color/black"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/textview_photo_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="0 Photos"
        android:textColor="#d2d2d7"
        android:textSize="14sp"/>
</LinearLayout>

<ImageView
    android:id="@+id/imageview_floder_select"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:src="@drawable/ic_dir_choose"
    android:visibility="visible"/>

